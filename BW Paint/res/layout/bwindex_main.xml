<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BWIndex" >

    <ImageButton
        android:id="@+id/imageButtondolphin"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:src="@drawable/dolphins" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButtonlion"
        android:layout_alignRight="@+id/imageButtoneagle"
        android:layout_marginBottom="48dp"
        android:layout_marginRight="36dp"
        android:text="LION"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageButtonlion"
        android:layout_alignTop="@+id/imageButtondolphin"
        android:layout_marginRight="17dp"
        android:layout_marginTop="48dp"
        android:text="DOLPHIN"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButtonlion"
        android:layout_alignLeft="@+id/textView3"
        android:layout_marginBottom="41dp"
        android:text="EAGLE"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/imageButtonlion"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentRight="true"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:src="@drawable/lion_600x450" />

    <ImageButton
        android:id="@+id/imageButtoneagle"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_above="@+id/imageButtonlion"
        android:layout_alignParentLeft="true"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:src="@drawable/baldeagle600x450" />
    
</RelativeLayout>